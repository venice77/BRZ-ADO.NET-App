@{
    ViewData["Title"] = "Inwentarz biura";
}
@model PrzedmiotModel
<script type="text/javascript">
    window.addEventListener('load', () => {
        var now = new Date();
        now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
        now.setMilliseconds(null)
        now.setSeconds(null)
        document.getElementById('datadod').value = now.toISOString().slice(0, -1);
    });
</script>
<div class="text-center">
    <div class="row m-2">
        <form asp-action="EditItem">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group row">
                <label asp-for="Nazwa" class="control-label m-2 col-auto">Nazwa</label>
                <input asp-for="Nazwa" class="form-control m-2 col-auto" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
        </div>
        
        <div class="form-group row">
                <label asp-for="dataDodania" class="control-label col-auto m-2">Data Dodania</label>
                <input type="datetime-local" asp-for="dataDodania" class="form-control m-2 col-auto" />
                <span asp-validation-for="dataDodania" class="text-danger"></span>
        </div>
        
        <div class="form-group row">
                <label asp-for="dataZwrotu" class="control-label col-auto m-2">Data Zwrotu</label>
                <input type="datetime-local" asp-for="dataZwrotu" class="form-control  col-auto m-2" value="" />
                <span asp-validation-for="dataZwrotu" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <input asp-for="ID" class="form-control" hidden />
        </div>
        <div class="form-group row align">
                <input type="submit" value="Akceptuj" class="btn btn-primary col-auto m-2" />
                <a class="btn btn-secondary col-auto m-2" asp-action="ItemList">Anuluj</a>

        </div>
    
    </form>
    </div>    
    
</div>
